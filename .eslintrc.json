{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"modules": true
		},
		"sourceType": "module"
	},
	"env": {
		"node": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"curly": [
			"error",
			"all"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-case-declarations": "off",
		"no-console": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": true
			}
		],
		"valid-jsdoc": "error"
	}
}
